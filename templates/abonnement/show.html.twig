{% extends 'baseFront.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
    <h1>Abonnement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonnement.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ abonnement.name }}</td>
            </tr>
            <tr>
                <th>From</th>
                <td>{{ abonnement.dateDebut ? abonnement.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>To</th>
                <td>{{ abonnement.dateFinal ? abonnement.dateFinal|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ abonnement.email }}</td>
            </tr>
            <tr>
                <th>Your Birth Date</th>
                <td>{{ abonnement.birthday ? abonnement.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>phone number</th>
                <td>{{ abonnement.numTel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('abonnement_index') }}">back to list</a>

    <a href="{{ path('abonnement_edit', {'id': abonnement.id}) }}">edit</a>

    {{ include('abonnement/_delete_form.html.twig') }}
{% endblock %}
